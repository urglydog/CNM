<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Quản lý danh mục</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
        <a class="navbar-brand" href="/products">AWS Manager</a>
        <div class="d-flex">
            <a href="/products" class="btn btn-light btn-sm me-2">Trang chủ</a>
            <% if (user && user.role === 'admin') { %>
                <a href="/categories/add" class="btn btn-primary btn-sm me-2">Thêm danh mục</a>
            <% } %>
            <% if (user) { %>
                <span class="navbar-text text-light me-3 small">
                    Đang đăng nhập: <strong><%= user.username %></strong> (<%= user.role %>)
                </span>
            <% } %>
            <a href="/logout" class="btn btn-outline-light btn-sm">Đăng xuất</a>
        </div>
    </div>
</nav>
<div class="container">
    <div class="card shadow-sm p-4">
        <h2 class="mb-4 text-primary">Danh sách danh mục</h2>
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Tên danh mục</th>
                        <th>Mô tả</th>
                        <% if (user && user.role === 'admin') { %>
                            <th class="text-center">Thao tác</th>
                        <% } %>
                    </tr>
                </thead>
                <tbody>
                    <% categories.forEach(c => { %>
                        <tr>
                            <td><small><%= c.categoryId %></small></td>
                            <td><strong><%= c.name %></strong></td>
                            <td><%= c.description || '' %></td>
                            <% if (user && user.role === 'admin') { %>
                                <td class="text-center">
                                    <a href="/categories/edit/<%= c.categoryId %>" class="btn btn-sm btn-outline-warning me-1">Sửa</a>
                                    <a href="/categories/delete/<%= c.categoryId %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('Xác nhận xoá danh mục?')">Xoá</a>
                                </td>
                            <% } %>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
</body>
</html>
