<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách sản phẩm</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>

<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="/products">AWS Manager</a>
            <div class="d-flex">
                <a href="/products" class="btn btn-light btn-sm me-2">Trang chủ</a>
                <a href="/categories" class="btn btn-outline-light btn-sm me-2">Danh mục</a>
                <% if (user && user.role === 'admin') { %>
                    <a href="/products/add" class="btn btn-primary btn-sm me-2">Thêm mới</a>
                <% } %>
                <% if (user) { %>
                    <span class="navbar-text text-light me-3 small">
                        Đang đăng nhập: <strong><%= user.username %></strong> (<%= user.role %>)
                    </span>
                <% } %>
                <a href="/logout" class="btn btn-outline-light btn-sm">Đăng xuất</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="card shadow-sm p-4">
            <h2 class="mb-4 text-primary">Quản lý sản phẩm</h2>

            <!-- Form tìm kiếm & lọc -->
            <form class="row g-2 mb-4" method="GET" action="/products">
                <div class="col-md-3">
                    <input type="text" name="search" class="form-control" placeholder="Tìm theo tên..." value="<%= filters && filters.search ? filters.search : '' %>">
                </div>
                <div class="col-md-3">
                    <select name="categoryId" class="form-select">
                        <option value="">-- Tất cả danh mục --</option>
                        <% if (categories) { %>
                            <% categories.forEach(c => { %>
                                <option value="<%= c.categoryId %>" <%= filters && filters.categoryId === c.categoryId ? 'selected' : '' %>><%= c.name %></option>
                            <% }) %>
                        <% } %>
                    </select>
                </div>
                <div class="col-md-2">
                    <input type="number" step="0.01" name="minPrice" class="form-control" placeholder="Giá từ" value="<%= filters && filters.minPrice ? filters.minPrice : '' %>">
                </div>
                <div class="col-md-2">
                    <input type="number" step="0.01" name="maxPrice" class="form-control" placeholder="Giá đến" value="<%= filters && filters.maxPrice ? filters.maxPrice : '' %>">
                </div>
                <div class="col-md-2 d-grid">
                    <button type="submit" class="btn btn-primary">Lọc</button>
                </div>
            </form>
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Hình ảnh</th>
                            <th>Tên sản phẩm</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Trạng thái</th>
                            <% if (user && user.role === 'admin') { %>
                                <th class="text-center">Thao tác</th>
                            <% } %>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(p => { %>
                            <tr>
                                <td>
                                    <img src="<%= p.url_image || 'https://via.placeholder.com/80' %>" class="rounded shadow-sm" style="width: 60px; height: 60px; object-fit: cover;">
                                </td>
                                <td>
                                    <strong><%= p.name %></strong><br>
                                    <small class="text-muted">ID: <%= p.id %></small>
                                </td>
                                <td class="text-success fw-bold">$
                                    <%= p.price %>
                                </td>
                                <td><%= p.quantity || 0 %></td>
                                <td>
                                    <% const qty = p.quantity || 0; %>
                                    <% if (qty === 0) { %>
                                        <span class="badge bg-danger">Hết hàng</span>
                                    <% } else if (qty < 5) { %>
                                        <span class="badge bg-warning text-dark">Sắp hết</span>
                                    <% } else { %>
                                        <span class="badge bg-success">Còn hàng</span>
                                    <% } %>
                                </td>
                                <% if (user && user.role === 'admin') { %>
                                    <td class="text-center">
                                        <a href="/products/edit/<%= p.id %>" class="btn btn-sm btn-outline-warning text-dark me-1">
                                            <i class="bi bi-pencil"></i> Sửa
                                        </a>
                                        <a href="/products/delete/<%= p.id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('Xác nhận xóa sản phẩm?')">
                                            <i class="bi bi-trash"></i> Xóa
                                        </a>
                                    </td>
                                <% } %>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <!-- Phân trang -->
                <% if (pagination && pagination.totalPages > 1) { %>
                    <nav>
                        <ul class="pagination justify-content-center">
                            <li class="page-item <%= pagination.currentPage === 1 ? 'disabled' : '' %>">
                                <a class="page-link" href="/products?page=<%= pagination.currentPage - 1 %>&search=<%= filters.search || '' %>&categoryId=<%= filters.categoryId || '' %>&minPrice=<%= filters.minPrice || '' %>&maxPrice=<%= filters.maxPrice || '' %>">Trước</a>
                            </li>
                            <% for (let p = 1; p <= pagination.totalPages; p++) { %>
                                <li class="page-item <%= p === pagination.currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="/products?page=<%= p %>&search=<%= filters.search || '' %>&categoryId=<%= filters.categoryId || '' %>&minPrice=<%= filters.minPrice || '' %>&maxPrice=<%= filters.maxPrice || '' %>"><%= p %></a>
                                </li>
                            <% } %>
                            <li class="page-item <%= pagination.currentPage === pagination.totalPages ? 'disabled' : '' %>">
                                <a class="page-link" href="/products?page=<%= pagination.currentPage + 1 %>&search=<%= filters.search || '' %>&categoryId=<%= filters.categoryId || '' %>&minPrice=<%= filters.minPrice || '' %>&maxPrice=<%= filters.maxPrice || '' %>">Sau</a>
                            </li>
                        </ul>
                    </nav>
                <% } %>
            </div>
        </div>
    </div>
</body>

</html>