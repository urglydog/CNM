<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý sản phẩm</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 960px;
            margin: 30px auto;
            background: #ffffff;
            padding: 20px 30px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }
        h1 {
            text-align: center;
            margin-bottom: 20px;
        }
        form.product-form {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            align-items: center;
            margin-bottom: 20px;
        }
        form.product-form input[type="text"],
        form.product-form input[type="number"],
        form.product-form input[type="file"] {
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        form.product-form button {
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            background-color: #28a745;
            color: #fff;
            cursor: pointer;
        }
        form.product-form button:hover {
            background-color: #218838;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }
        th {
            background-color: #f0f0f0;
        }
        tr:hover {
            background-color: #fafafa;
        }
        .btn {
            display: inline-block;
            padding: 6px 12px;
            border-radius: 4px;
            border: none;
            cursor: pointer;
            font-size: 14px;
        }
        .btn-edit {
            background-color: #007bff;
            color: #fff;
        }
        .btn-edit:hover {
            background-color: #0069d9;
        }
        .btn-delete {
            background-color: #dc3545;
            color: #fff;
        }
        .btn-delete:hover {
            background-color: #c82333;
        }
        .actions {
            display: flex;
            gap: 6px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Quản lý sản phẩm</h1>
        <form class="product-form" action="/add" method="post" enctype="multipart/form-data">
            <input type="text" name="name" placeholder="Tên sản phẩm" required>
            <input type="number" name="price" placeholder="Giá" min="0" step="1000">
            <input type="file" name="image" required>
            <button type="submit">Thêm sản phẩm</button>
        </form>

        <table>
            <tr>
                <th>ID</th>
                <th>Tên</th>
                <th>Giá</th>
                <th>Ảnh</th>
                <th>Hành động</th>
            </tr>
            <% products.forEach(p=> { %>
            <tr>
                <td><%= p.id %></td>
                <td><%= p.name %></td>
                <td><%= p.price %></td>
                <td>
                    <img src="<%= p.url_image %>" alt="Ảnh sản phẩm" width="100">
                </td>
                <td>
                    <div class="actions">
                        <a href="/edit/<%= p.id %>" class="btn btn-edit">Sửa</a>
                        <form action="/delete/<%= p.id %>" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-delete" onclick="return confirm('Bạn có chắc muốn xóa?');">Xóa</button>
                        </form>
                    </div>
                </td>
            </tr>
            <% }) %>
        </table>
    </div>
</body>
</html>